<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        android:id="@+id/rootLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ProjectLandingActivity">

<RelativeLayout android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rel_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:transitionName="profile"
                    android:id="@+id/projectImage"
                    android:scaleType="fitXY"
                    android:src="@drawable/demooo"
            />
            <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/loadings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

            />

        <ImageView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/back_arrow_black"/>



        <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#70000000"
                android:layout_alignBottom="@+id/proimage" android:layout_marginBottom="0dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MegaPolis"
                    android:transitionName="profile"
                    android:id="@+id/projectname"
                    android:singleLine="true"
                    android:paddingLeft="15dp"
                    android:textColor="#ffffff"
                    android:textSize="22sp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hinjewadi,Pune"
                        android:textColor="#ffffff"
                        android:layout_weight="0.8"
                        android:ellipsize="end"
                        android:paddingBottom="5dp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:id="@+id/projectlocation"
                        android:textSize="18sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/details"
                        android:layout_weight="1.2"
                        android:text="Details"
                        android:visibility="gone"
                        android:gravity="right|center_vertical"
                        android:paddingBottom="5dp"
                        android:drawablePadding="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#ffffff"
                        android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/lin_tital"
            android:layout_below="@+id/rel_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:padding="5dp"
                android:scaleType="center"
                android:id="@+id/icon"
                android:src="@drawable/kp_new"/>
        <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Megapolis : 150 "
                    android:textSize="20sp"

                    android:gravity="bottom"
                    android:id="@+id/pro_name"
                    android:visibility="visible"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Magarpatta, Keshav Nagar, Pune"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:visibility="visible"
                    android:textSize="16sp"
                    android:id="@+id/pro_loc"
                    android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>

    <TextView

            android:id="@+id/txtViewTital"
            android:layout_below="@+id/lin_tital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Photos"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
    />
    <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/txtViewTital"
            android:id="@+id/recyclergallary"
            android:layout_width="match_parent"
            android:layout_height="160dp">

    </android.support.v7.widget.RecyclerView>
<LinearLayout
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/detailss"
        android:layout_below="@+id/recyclergallary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout

            android:layout_below="@+id/recyclergallary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/category"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:id="@+id/cat_title"
                    android:textColor="#000000"
                    android:textSize="20sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Residential"
                    android:id="@+id/cat_titdesc"
                    android:textColor="#000000"
                    android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
    <View            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#D6D6D6"/>

    <LinearLayout

            android:layout_below="@+id/recyclergallary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/flat"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flat Type"

                    android:textColor="#000000"
                    android:textSize="20sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 BHK ,3 BHK"

                    android:textColor="#000000"
                    android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
    <View


            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#D6D6D6"/>

    <LinearLayout

            android:layout_below="@+id/recyclergallary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/area"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usable Area"

                    android:textColor="#000000"
                    android:textSize="20sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 BHk-73.35 sq mt to 75.50 sq mt"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="20sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 BHk-73.35 sq mt to 75.50 sq mt"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
    <View


            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#D6D6D6"/>

    <LinearLayout

            android:layout_below="@+id/recyclergallary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/rate"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Starting From"
                    android:textColor="#000000"
                    android:textSize="20sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 BHk - 73.35 Lac(s)+Taxes"

                    android:textColor="#000000"
                    android:textSize="20sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 BHk - 95.44 Lac(s)+Taxes"

                    android:textColor="#000000"
                    android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#D6D6D6"/>


</LinearLayout>

    <LinearLayout
           android:layout_below="@+id/detailss"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:id="@+id/about"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:id="@+id/abtimage"
                        android:src="@drawable/about_project"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="About Project"
                        android:clickable="false"
                        android:paddingTop="5dp"

                        android:textStyle="bold"
                        android:paddingBottom="5dp"
                        android:id="@+id/abttext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:id="@+id/amenities"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:id="@+id/amenitimage"
                        android:src="@drawable/amenities_icon"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Amenities"
                        android:clickable="false"
                        android:paddingTop="5dp"
                        android:textStyle="bold"
                        android:focusable="false"
                        android:paddingBottom="5dp"
                        android:id="@+id/amenitytext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:id="@+id/gallery"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:id="@+id/photo"
                        android:src="@drawable/gallary_icon"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Photo Gallery"
                        android:clickable="false"
                        android:paddingTop="5dp"
                        android:focusable="false"
                        android:paddingBottom="5dp"
                        android:id="@+id/gallerytext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:id="@+id/floorplan"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:id="@+id/floor"
                        android:src="@drawable/floorplan"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Floor Plan"
                        android:clickable="false"
                        android:paddingTop="5dp"
                        android:focusable="false"
                        android:paddingBottom="5dp"
                        android:id="@+id/floorplantext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:visibility="gone"
                          android:layout_weight="1"
                          android:id="@+id/virtualtour"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:id="@+id/visual"
                        android:src="@drawable/visualtour"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Virtual Tour"
                        android:clickable="false"
                        android:textStyle="bold"
                        android:paddingTop="5dp"
                        android:focusable="false"
                        android:paddingBottom="5dp"
                        android:id="@+id/visualtourtext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:visibility="gone"
                          android:id="@+id/rera"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/reraimg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"
                        android:src="@drawable/rera_new" />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="ReRa"
                        android:clickable="false"
                        android:textStyle="bold"
                        android:paddingTop="5dp"
                        android:focusable="false"
                        android:paddingBottom="5dp"
                        android:id="@+id/reratext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:id="@+id/locationmap"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:id="@+id/locationmapimage"
                        android:src="@drawable/locationmap"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Location Map"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:paddingTop="5dp"
                        android:focusable="false"
                        android:paddingBottom="5dp"
                        android:id="@+id/locationmaptext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:id="@+id/liveview"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:id="@+id/liveviewimage"
                        android:src="@drawable/liveview"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Live View"
                        android:clickable="false"
                        android:paddingTop="5dp"
                        android:focusable="false"
                        android:paddingBottom="5dp"
                        android:textStyle="bold"
                        android:id="@+id/liveviewtext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:id="@+id/enquiry"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:id="@+id/enquiryimage"
                        android:src="@drawable/enquiry"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Enquiry"
                        android:clickable="false"
                        android:paddingTop="5dp"
                        android:focusable="false"
                        android:paddingBottom="5dp"
                        android:textStyle="bold"
                        android:id="@+id/enquirytext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:id="@+id/website"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:id="@+id/web"
                        android:src="@drawable/website"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Website"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:paddingTop="5dp"
                        android:focusable="false"
                        android:paddingBottom="5dp"
                        android:id="@+id/websitettext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:id="@+id/contactus"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:id="@+id/amenitiesimage"
                        android:src="@drawable/contactus"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Contact Us"
                        android:clickable="false"
                        android:paddingTop="5dp"
                        android:focusable="false"
                        android:paddingBottom="5dp"
                        android:id="@+id/contactustext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:id="@+id/livechat"
                          android:visibility="gone"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:id="@+id/livechatimage"
                        android:src="@drawable/live_chat"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Live Chat"
                        android:clickable="false"
                        android:paddingTop="5dp"
                        android:focusable="false"
                        android:paddingBottom="5dp"
                        android:textStyle="bold"
                        android:id="@+id/live1chattext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:clickable="false"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:id="@+id/refer"
                        android:visibility="gone"
                        android:src="@drawable/referfriend"/>
                <TextView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Refer a Friend"
                        android:clickable="false"
                        android:textStyle="bold"
                        android:paddingTop="5dp"
                        android:focusable="false"
                        android:paddingBottom="5dp"
                        android:id="@+id/refertext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:clickable="false"
                          android:layout_weight="1"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:visibility="gone"
                        android:src="@drawable/referfriend"/>
                <TextView
                        android:visibility="gone"
